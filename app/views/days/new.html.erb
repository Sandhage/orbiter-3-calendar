<h2>Claim This Day</h2>
<%= form_for @claimed_day do |f| %>
    <div class="form-group">
        <%= f.label      :name, class: "label-text" %>
        <%= f.text_field :name, class: "form-control", required: true %>
    </div>
    
    <div class="form-group">
        <%= f.label       :date, class: "label-text"%>
        <%= f.text_field  :date, class: "form-control", required: true %>
    </div>
    
    <div class="form-group">
        <%= f.label      :donation_amount, class: "label-text" %>
        <%= f.text_field :donation_amount, class: "form-control", required: true %>
    </div>
    
    <div class="form-group">
        <%= f.label     :message, class: "label-text" %>
        <%= f.text_area :message, class: "form-control", required: false %>
    </div>
    
    <div class="actions">
        <%= f.submit 'Continue To Payment', class: "btn btn-large btn-primary" %>
    </div>
<% end %>
